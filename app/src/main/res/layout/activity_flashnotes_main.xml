<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".flashnotes.FlashNotesMainView"
    android:layout_margin="10dp"
    android:padding="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5sp">
        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="Flash Notes! \n Learn from flash notes or add some:"
            android:layout_marginBottom="20sp"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_default_flash_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Default flash notes"
            android:textSize="30sp"
            android:layout_margin="10sp"/>

        <Button
            android:id="@+id/btn_manage_flash_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage flash notes"
            android:textSize="30sp"
            android:layout_margin="10sp"/>

        <Button
            android:id="@+id/btn_your_flash_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your flash notes"
            android:textSize="30sp"
            android:layout_margin="10sp"/>

        <TextView
            android:id="@+id/tv_back_arrow_flash_notes"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="80sp"
            android:background="@drawable/baseline_arrow_back_24"
            />
    </LinearLayout>
</ScrollView>