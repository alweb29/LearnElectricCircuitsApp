<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".test.TestMainView"
    android:layout_margin="10dp"
    android:padding="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="Test! \nChoose your chapter :"
            android:layout_marginBottom="20sp"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_first_chapter_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 chapter"
            android:textSize="40sp"
            android:layout_margin="10sp"/>

        <Button
            android:id="@+id/btn_second_chapter_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 chapter"
            android:textSize="40sp"
            android:layout_margin="10sp"/>

        <Button
            android:id="@+id/btn_third_chapter_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 chapter"
            android:textSize="40sp"
            android:layout_margin="10sp"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/ib_go_back_arrow_calculator_serial"
        android:src="@drawable/baseline_arrow_back_24"
        android:scaleX="3"
        android:scaleY="3"
        android:background="#00000000"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:contentDescription="Go Back to main Menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>